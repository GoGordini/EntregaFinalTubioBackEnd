<div style="max-width: 400px; margin: 0 auto; padding: 20px; border: 1px solid #ccc; border-radius: 5px; background-color: #f8f9fa; font-family: 'Roboto', sans-serif;">
    <h1 style="text-align: center;">Registro</h1>
    <form id="registerForm" style="margin-bottom: 20px;">
        <label style="display: block; margin-bottom: 5px;">Nombre</label>
        <input name="first_name" style="width: calc(100% - 22px); padding: 10px; border: 1px solid #ccc; border-radius: 3px; margin-bottom: 10px;">
        <br/>
        <label style="display: block; margin-bottom: 5px;">Apellido</label>
        <input name="last_name" style="width: calc(100% - 22px); padding: 10px; border: 1px solid #ccc; border-radius: 3px; margin-bottom: 10px;">
        <br/>
        <label style="display: block; margin-bottom: 5px;">Email</label>
        <input name="email" style="width: calc(100% - 22px); padding: 10px; border: 1px solid #ccc; border-radius: 3px; margin-bottom: 10px;">
        <br/>
        <label style="display: block; margin-bottom: 5px;">Edad</label>
        <input name="age" style="width: calc(100% - 22px); padding: 10px; border: 1px solid #ccc; border-radius: 3px; margin-bottom: 10px;">
        <br/>
        <label style="display: block; margin-bottom: 5px;">Contraseña</label>
        <input name="password" type="password" style="width: calc(100% - 22px); padding: 10px; border: 1px solid #ccc; border-radius: 3px; margin-bottom: 10px;">
        <br/>
        <input type="submit" value="Registrarse" style="width: 100%; padding: 10px; background-color: #ccc; color: #333; border: none; border-radius: 3px; cursor: pointer; margin-top: 10px;">
    </form>
    <p style="text-align: center;">Ya tienes cuenta? <a href="/login" style="color: gray; text-decoration: none;">Ingresa aquí</a></p>
</div>
<script src="/js/register.js"></script>
